<h1> Car Rental </h1>

<% if user_signed_in? %>
	<%= link_to 'Home',
		new_car_path(@cars) %>
		<br>
	<%= link_to 'Log Out', destroy_user_session_path, data: {turbo_method: :delete} %>
<%else%>
	<%= link_to 'Sign in', new_user_session_path %>
	<br>
	<%= link_to 'Sign up', new_user_registration_path %>
<%end%>

<br>

<%if @cars.any?%>
<div class="row row-cols-auto px-2">
	<% @cars.each do |car|%>
	<div class="col-md-2" > 
		<div class="card border-danger h-100 mb-1" style="width: 15rem;">
		<%= link_to car_path(car) do%>
			<%if car.photos.attached?%>					
				<%= image_tag car.photos.first, width: 239, height: 239 %>
			<%end%>				
			  <div class="card-body">
			    <p class="card-text"><%= car.car_name %></p> 
			    <p class="card-text"> RM <%= car.price %> per day</p>
			  </div>
		</div>
		<%end%>
	</div>
	<%end%>	
</div>	
<%end%>

<%= link_to 'Add Car', new_car_path(@cars)%>
