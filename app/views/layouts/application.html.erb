<!DOCTYPE html>
<html>
  <head>
    <title>CarRental</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://js.braintreegateway.com/web/dropin/1.40.2/js/dropin.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

  </head>
    <%= include_gon %>
    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
  <body>
    <div class="fluid bg-dark bg-gradient text-white">
    <header data-bs-theme="dark">
      <div class="collapse text-bg-dark" id="navbarHeader">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-md-7 py-4">
              <h4>Contact</h4>
              <ul class="list-unstyled">
                <li><a href="#" class="text-white">Follow on Twitter</a></li>
                <li><a href="#" class="text-white">Like on Facebook</a></li>
                <li><a href="#" class="text-white">Email me</a></li>
              </ul>
            </div>
             <div class="col-sm-2 offset-md-3 py-4">
              <ul class="list-unstyled">
                <% if user_signed_in? %>
                  <li><%= link_to 'Log Out', destroy_user_session_path, data: { turbo_method: :delete } %></li>

                  <% if current_user.is_admin? %>
                    <li><%= link_to 'Admin', admin_cars_path%></li>
                  <% end %>

                <% else %>
                  <li><%= link_to 'Sign in', new_user_session_path %></li>
                  <br>
                  <li><%= link_to 'Sign up', new_user_registration_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
          <div class="d-flex gap-3">
            <%=link_to image_tag('Picture1.png', height: 80), root_path, class: 'navbar-brand d-flex align-items-center' %>  
            <div class="nav-item d-flex gap-3 align-items-center">
              <%= link_to 'HOW TO BOOK', howtobook_path, class: 'no-underline' %>
              <%= link_to 'ABOUT', about_path, class: 'no-underline' %>
              <%= link_to 'DIRECT MESSAGE', new_customer_inquiry_path, class: 'no-underline' %>
              <%= link_to 'RENTING DETAIL', customer_rentals_path, class: 'no-underline' %>

              <form action="<%= customer_cars_path %>">
                <input type="text" placeholder="Search for Car" name="car_name">
                <button type= "Search"><i class="fa-solid fa-magnifying-glass"></i></button>
              </form>
            </div>
            
          </div>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </div>
    </header>

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <%= yield %>
    <script src="https://kit.fontawesome.com/49117b3c48.js" crossorigin="anonymous"></script>
    </div>
  </body>
</html>

