<div class="container">
	<h2>Rental Details</h2>
	<table class="table">
	  <thead>
	    <tr>
	    	<th scope="col">No</th>
	      <th scope="col">Car</th>
	      <th scope="col">Pickup Date/Time</th>
	      <th scope="col">Dropoff Date/Time</th>
	      <th scope="col">Pickup Location</th>
	      <th scope="col">Dropoff Location</th>
	     	<th scope="col">Duration</th>
	     	<th scope="col">Total Price</th>
	     	<th scope="col">Status</th>
	      <th scope="col">Action</th>

	    </tr>
	  </thead>

	  <tbody>
			<% @rentals.each_with_index do |rental, index| %>
	    <tr>
	    	<td><%= index + 1%></td>
	      <td><%= rental.car_id%></th>
	      <td><%= rental.pick_up%></td>
	      <td><%= rental.drop_off%></td>
	      <td><%= rental.pick_up_location%></td>
	      <td><%= rental.drop_off_location%></td>
	      <td><%= rental.duration%></td>
	      <td><%= rental.total_price%></td>
	      <td><%= rental.status%></td>
	      <td><%= button_to "Cancel", admin_rental_path(rental, status: "cancel"), method: :put, class: "btn btn-primary"%></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

