<br>
<%= form_with model: @rental do |f|%>
	
	<h4><%= f.label :Pick_up_%></h4>
	<%= f.label :Date%>
	<p><%= f.date_field :pick_up%></p>
	<%= f.label :Time%>
	<p><%= f.time_field :pick_up%></p>
	<%= f.label :Location%>
	<p><%= f.text_field :pick_up_location%></p>
	
	<br>

	<h4><%= f.label :Drop_off%></h4>
	<%= f.label :Date%>
	<p><%= f.date_field :drop_off%></p>
	<%= f.label :Time%>
	<p><%= f.time_field :drop_off%></p>
	<%= f.label :Location%>
	<p><%= f.text_field :drop_off_location%></p>

	<br>

	<%= f.hidden_field :car_id, value: @car.id%>
	<%= f.submit 'Book Now'%>
<%end%>

