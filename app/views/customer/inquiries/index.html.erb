<section class="container">
	<br>
	<div class="row row-cols-3">
	<% @inquiries.each do |inquiry| %>
		<div class="col-md-4">
			<div class="card mb-3">
			    <div class="card-body">
			        <h5 class="card-title"><%= inquiry.title %></h5>
			        <%= link_to "View message", customer_inquiry_path(inquiry), class: "btn btn-primary" %>
		    	</div>
		 	</div>
		</div>
	<% end %>
	</div>

	<br>

	<%= link_to "New Message", new_customer_inquiry_path %>
</section>


<h2>New Message</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Email</th>
        <th scope="col">Subject</th>
        <th scope="col">Time</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
      <% @inquiries.each_with_index do |inquiry, index| %>
        <tr>
          <td><%= index + 1%></td>
          <td><%= inquiry.email %></td>
          <td><%= inquiry.title%></td>
          <td><%= time_ago_in_words(@inquiry.created_at) %></td>
          <td>
            <%= link_to customer_inquiry_path(inquiry) do %> 
              <i class="fa-solid fa-circle-arrow-right"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
</div>

<div class="d-flex gap-1">
<%= link_to edit_customer_inquiry_path(@inquiry) do %>
	<i class="fa-regular fa-pen-to-square"></i>
<% end %>

<%= link_to customer_inquiry_path(@inquiry), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
	<i class="fa-regular fa-trash-can"></i>
<% end %>
</div>

<%= link_to "Message dashboard", customer_inquiries_path %>
