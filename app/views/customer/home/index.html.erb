
<section class="container">
	<h1>Available Cars</h1>
		<form action="<%= customer_cars_path %>"><i class="fa-solid fa-magnifying-glass"></i>
			<input type="text" placeholder="Search for Car" name="car_name">
			<br>
			<button type= "Search">Search</button>
		</form>
		
	<section class="row">
		<% if @cars.any? %>
			<% @cars.each do |car| %>
				<section class="col-md-4 mb-3">
					<section class="card h-100">
						<% if car.photos.attached? %>					
							<%= image_tag car.photos.first, height: 300 %>
						<% end %>						
						<section class="card-body">
					    	<p class="card-text"><%= car.car_name %></p> 
					    	<p class="card-text"> RM <%= car.price %> per day</p>
					    	<%= link_to 'Click Here', customer_car_path(car), class: 'btn btn-primary' %>							
						</section>
					</section>
				</section>
			<% end %>
		<% end %>
	</section>
	<%= link_to 'Ask Us', customer_inquiries_path %>
</section>

