<center><h1> Car Rental </h1></center>

<br>

<center>
<form action="<%= root_path %>"><i class="fa-solid fa-magnifying-glass"></i>
		<input type="text" placeholder="Search for Car" name="car_name">
		<br>
		<button type= "Search">Search</button>
</form>
</center>

<%# catogory not showing%>
<%# show the availability of cars and category%>

<br>

<% if @cars.any? %>
<center><div class="container text-center">
	<div class="row align-items-start">
		<% @cars.each do |car| %>
			<div class="col-md-3" > 
				<div class="card border border-5 h-100 mb-2">
					<% if car.photos.attached? %>					
						<%= image_tag car.photos.first, class: "img-fluid" %>
					<% end %>				
					 <div class="card-body h-100">
					    <p class="card-text"><%= car.car_name %></p> 
					    <p class="card-text"> RM <%= car.price %> per day</p>
					    <%= link_to 'Click Here', customer_car_path(car), class: 'btn btn-primary' %>
					 </div>
				</div>
			</div>
		<% end %>	
	</div>	
</div>
<%= link_to 'Ask Us', customer_inquiries_path %>

</center>
<% end %>

<br>


