<center><h1>Car List</h1></center>

<% if @cars.any? %>
<center><div class="container text-center">
	<div class="row align-items-start">
		<% @cars.each do |car| %>
			<div class="col-md-3" > 
				<div class="card border border-5 h-100 mb-2">
					<% if car.photos.attached? %>					
						<%= image_tag car.photos.first, class: "img-fluid" %>
					<% end %>				
					 <div class="card-body h-100">
					    <p class="card-text"><%= car.car_name %></p> 
					    <p class="card-text"> RM <%= car.price %> per day</p>
					    <%= link_to 'Click Here', customer_car_path(car), class: 'btn btn-primary' %>
					 </div>
				</div>
			</div>
		<% end %>	
	</div>	
</div>
<%else%>
	<p>Not found. </p>
</center>
<% end %>