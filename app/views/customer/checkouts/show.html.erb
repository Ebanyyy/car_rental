<div class="container-center">
  <div class="wrapper">
    <div class="response container">
      <div class="content">
        <% if @result %>

          <h1><%= @result[:header] %></h1>
          <section>
            <p><%= @result[:message] %></p>
          </section>
        <% else %>
          <section>
            <p>Test another transaction.</p>
        </section>

        <% end %>

      </div>
    </div>
  </div>
</div>

<section class="vh-100" style="background-color: #35558a;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100 text-center">
      <div class="col">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-light btn-lg" data-mdb-toggle="modal"
          data-mdb-target="#exampleModal">
          <i class="fas fa-info me-2"></i> Click here to see details
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header border-bottom-0">
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body text-start text-black p-4">
                <h5 class="modal-title text-uppercase mb-5" id="exampleModalLabel">Your id_no: <%= @transaction.id %></h5>
                <h4 class="mb-5" style="color: #35558a;">Thanks You</h4>
                <p class="mb-0" style="color: #35558a;">Payment summary</p>
                <hr class="mt-2 mb-4"
                  style="height: 0; background-color: transparent; opacity: .75; border-top: 2px dashed #9e9e9e;">

                <div class="d-flex justify-content-between">
                  <p class="small mb-0">Created at:</p>
                  <p class="small mb-0"><%= @transaction.created_at %></p>
                </div>

                <div class="d-flex justify-content-between pb-1">
                  <p class="small">Updated at:</p>
                  <p class="small"><%= @transaction.updated_at %></p>
                </div>

                 <div class="d-flex justify-content-between pb-1">
                  <p class="small">Status</p>
                  <p class="small"><%= @transaction.status %>></p>
                </div>

                <div class="d-flex justify-content-between">
                  <p class="fw-bold">Total</p>
                  <p class="fw-bold" style="color: #35558a;"><%= @transaction.amount %></p>
                </div>

              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
