<div class="wrapper">
  <div class="response container">
    <div class="content">
      <% if @result %>

        <h1><%= @result[:header] %></h1>
        <section>
          <p><%= @result[:message] %></p>
        </section>
      <% else %>
        <section>
          <p>Test another transaction or see the Braintree API response.</p>
      </section>

      <% end %>

    </div>
  </div>
</div>

<aside class="drawer dark">
  <article class="content compact">
    <section>
      <h5>Transaction</h5>

      <table cellpadding="0" cellspacing="0">
        <tbody>
          <tr>
            <th>id</th>
            <td><%= @transaction.id %></td>
          </tr>
          <tr>
            <th>type</th>
            <td><%= @transaction.type %></td>
          </tr>
          <tr>
            <th>amount</th>
            <td><%= @transaction.amount %></td>
          </tr>
          <tr>
            <th>status</th>
            <td><%= @transaction.status %></td>
          </tr>
          <tr>
            <th>created_at</th>
            <td><%= @transaction.created_at %></td>
          </tr>
          <tr>
            <th>updated_at</th>
            <td><%= @transaction.updated_at %></td>
          </tr>
        </tbody>
      </table>
    </section>

  </article>
</aside>


<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color: #f37a27;">Your Rental Reciept</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Created at</p>
                <p><%= @transaction.created_at %></p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Id No.</p>
                <p><%= @transaction.id %></p>
              </div>
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p><%= @rental.car.car_name%></p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p><%= @rental.total_price%></p>
                </div>
              </div>
            </div>

            <div class="row my-4">
              <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                <p class="lead fw-bold mb-0" style="color: #f37a27;"><%= @rental.total_price%></p>
              </div>
            </div>

            <p class="mt-4 pt-2 mb-0">Want any help? <a href="#!" style="color: #f37a27;">Please contact
                us</a></p>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>